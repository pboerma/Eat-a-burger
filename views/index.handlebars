<div class="burger__card">
  <h2>Your Burgers</h2>
	<!--looping through the data for !devoured burgers-->
  <div class="burger__list">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </div>
</div>
<div class="burger__card">
  <h2>Past Burgers</h2>
  
  <!--looping through the data for devoured burgers-->
  <div class="burger__list devoured__burgers">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </div>
</div>
<div class="burger__card">
  <h2>Order A Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <input type="radio" name="devoured" value="0" checked> Ready to Eat<br>
      <input type="radio" name="devoured" value="1"> Devoured!
      
    </div>

    <button type="btn__form submit btn">Add Burger</button>
  </form>
</div>